---
import BasicScripts from "../components/BasicScripts.astro";
import Header from "../components/Header.astro";
---

<BasicScripts />
<main
  class="bg-light m-0 h-screen px-10 text-black dark:bg-dark dark:text-white md:px-20 lg:px-40"
>
  <Header />
  <section class="flex grow items-center">
    <div
      class="container mx-auto my-8 flex flex-col items-center justify-center px-5"
    >
      <div class="max-w-lg text-center">
        <img src="/icons/not_found.svg" class="mb-8 text-white" />

        <p class="text-2xl font-semibold md:text-3xl">
          Sorry, we couldn't find this page.
        </p>
        <p class="mt-4 mb-8 dark:text-gray-400">
          But dont worry, you can find plenty of other things on our homepage.
        </p>
        <a
          rel="noopener noreferrer"
          href="/"
          class="mt-8 rounded bg-primary px-8 py-3 font-semibold dark:bg-secondary dark:text-gray-900"
          >Back to homepage</a
        >
      </div>
    </div>
  </section>
</main>
