---
import Icon from 'astro-icon';

export interface Props {
  project: {
    homepage: string;
    image: string;
    name: string;
    description: string;
    tags?: string[];
  };
}

const { homepage, image, name, description, tags } = Astro.props.project;
---

<div
  class="rounded-lg shadow-lg bg-white dark:bg-gray-700 h-full max-w-full bg-opacity-80 backdrop-filter backdrop-blur-lg"
>
  <a href={homepage}>
    <img
      class="rounded-t-lg w-full h-fit bg-white dark:bg-gray-600 object-contain"
      src={image}
      alt={`${name}'s logo`}
    />
  </a>

  <div class="p-6 text-black dark:text-white rounded-b-lg">
    <div class="flex justify-between">
      <h2 class="font-bold text-xl">{name}</h2>
      <div
        class="hover:bg-gray-400 h-8 w-8 flex items-center justify-center rounded-lg"
      >
        <a href={homepage} target="_blank" aria-label="Open homepage">
          <Icon name="akar-icons:link-out" class="h-4 w-4" />
        </a>
      </div>
    </div>
    <p>{description}</p>
    <div class="flex justify-start mt-4">
      <div class="flex max-w-[50px] gap-2">
        {
          tags?.map((tag) => (
            <div class="text-xs text-red-700 dark:text-red-300">#{tag}</div>
          ))
        }
      </div>
    </div>
  </div>
</div>
