---
export interface Props {
  source: string;
}

const { source } = Astro.props;
---

<div class="h-56 w-56 hover:animate-spin">
  <img src={source} class="rounded-full image h-56 w-56" alt="picture of me" />
</div>

<style>
  @tailwind components;

  @layer components {
    .image {
      filter: drop-shadow(0 0 35px var(--color-primary));
    }
  }
</style>
