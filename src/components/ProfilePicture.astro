---
export interface Props {
  source: string;
}

const { source } = Astro.props;
---

<div class="aspect-square h-full w-full hover:animate-spin">
  <img
    src={source}
    class="image aspect-square h-full w-full rounded-full"
    alt="picture of me"
  />
</div>

<style>
  @tailwind components;

  @layer components {
    .image {
      filter: drop-shadow(0 0 35px var(--color-primary));
    }
  }
</style>
