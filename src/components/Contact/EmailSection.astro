---
import Section from "./Section.astro";

export interface Props {
  email: string;
  publicKey?: {
    content: string;
    url: string;
  };
  class?: string;
  codeClass?: string;
}

const { class: styles, codeClass, email, publicKey } = Astro.props;

const emailParts = email.split("@");
---

<Section class={`p-8 flex flex-col gap-8 ${styles || ""}`}>
  <a href={`mailto:${email}`}>
    <h2 class="text-xl text-white underline dark:text-black">
      <span class="font-bold">{emailParts[0]}@</span>{emailParts[1]}
    </h2>
  </a>

  <div class="flex grow flex-col">
    <h3 class="font-firacode text-black">Public Key:</h3>
    <code
      class={`text-white dark:text-black grow rounded-2xl px-3 py-1 ${
        codeClass || ""
      }`}
      >{publicKey?.content || "No Content"}
    </code>
  </div>
</Section>
