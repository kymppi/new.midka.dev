---
import Project from './Project.astro';

const { default: projects } = await import('../../../config/projects.json');
---

<div
  class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 xl:grid-cols-4 gap-8 w-full grow mb-4 md:mb-8"
>
  {projects.map((project) => <Project project={project} />)}
</div>

