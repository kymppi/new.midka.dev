---
export interface Props {
  title: string;
  description: string;
  publishedAt: Date;
  image: string;
  link: string;
}

const { title, description, publishedAt, image, link } = Astro.props;
---

<article class="flex max-w-[24rem] grow basis-80 flex-col gap-2">
  <img
    src={image}
    alt={`Cover for ${title}`}
    class="shadow-smoothLgBlack w-full rounded-bl-3xl rounded-tr-3xl object-cover"
  />
  <h2 class="text-lg font-bold">{title}</h2>
  <p>{description}</p>
  <div class="flex flex-wrap gap-2">
    <footer class="flex w-full justify-between">
      <time class="text-gray-700 dark:text-gray-400"
        >{publishedAt.toLocaleString()}</time
      >
      <a
        href={link}
        class="cursor-pointer text-teal-700 no-underline dark:text-teal-500"
      >
        Read more âž¡
      </a>
    </footer>
  </div>
</article>
